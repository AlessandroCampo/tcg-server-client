{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2015",
      "ES2020"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": [
    "src/**/*",
    "shared/**/*"
  ]
}