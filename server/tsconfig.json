{
  "compilerOptions": {
    "baseUrl": ".", // Points to the root of the project
    "paths": {
      "@shared/*": [
        "shared/*" // Resolves to the shared folder in the root
      ]
    },
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": ".", // Ensure rootDir is pointing to the correct root (root of the project)
    "strict": true
  },
  "include": [
    "shared", // Include the shared folder for resolution
    "server/src" // Include the server's src folder
  ]
}